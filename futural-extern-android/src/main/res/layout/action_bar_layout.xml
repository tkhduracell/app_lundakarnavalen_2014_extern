<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
     >


        <se.lundakarnevalen.extern.widget.LKActionBarTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:textSize="@dimen/actionbar_size"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/lundakarnevalen_actionbar"
            />

        <Button
            android:onClick="openRightMenu"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_action_menu_out" />

</RelativeLayout>