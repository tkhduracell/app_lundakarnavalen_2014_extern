<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/right_menu_background"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    >

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/right_menu_button"
        >
        <se.lundakarnevalen.extern.widget.LKTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/image"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/show_all"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/right_menu_button_shadow"
        android:layout_below="@id/button"
        >

    </RelativeLayout>

</RelativeLayout>