<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="2"
    tools:context=".ContentActivity">
    <!-- ^ Wrapper Layout to create margin between elements -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/test_nojen"
            android:contentDescription="@string/content_desc_image" />
        <se.lundakarnevalen.extern.widget.LKTextView
            android:id="@+id/text1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/revy_title"
            android:shadowRadius="4"
            android:shadowDy="1"
            android:lineSpacingMultiplier="1.2"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/image2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:contentDescription="@string/content_desc_image" />
        <se.lundakarnevalen.extern.widget.LKTextView
            android:id="@+id/text2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/revy_title"
            android:shadowRadius="4"
            android:shadowDy="1"
            android:lineSpacingMultiplier="1.2"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>
 </LinearLayout>
