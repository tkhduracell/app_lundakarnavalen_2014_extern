<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.lundakarnevalen.extern.fragments.SchemeFragment"
    android:background="@color/blue_purple">

        <RelativeLayout
            android:id="@+id/heartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            >
        <ImageView
            android:id="@+id/myHeart"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="6dp"
            android:background="@color/yellow"/>
        <se.lundakarnevalen.extern.widget.LKTextView
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/myHeart"
            android:layout_marginLeft="2dp"
            android:id="@+id/myScheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/red"
            android:text="@string/my_scheme"/>
        </RelativeLayout>





    <RelativeLayout
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heartText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bluegreen_bg_bottom_shadow"

        >
        <se.lundakarnevalen.extern.widget.LKTextView
            android:layout_centerHorizontal="true"
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:text="@string/saturday"

            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heartText"
        android:layout_toLeftOf="@+id/day"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/day"
        android:background="@drawable/transparentbluegreen_bg_bottom_shadow">

        <se.lundakarnevalen.extern.widget.LKTextView
            android:id="@+id/leftArrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/scheme_left"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:background="@drawable/bluegreen_bg_bottom_shadow"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heartText"
        android:layout_toRightOf="@+id/day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/day"
        android:background="@drawable/transparentbluegreen_bg_bottom_shadow">

        <se.lundakarnevalen.extern.widget.LKTextView
            android:id="@+id/rightArrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/scheme_right"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:background="@drawable/bluegreen_bg_bottom_shadow"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/heartTextBackground"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_alignLeft="@id/heartText"
        android:layout_alignRight="@id/heartText"
        android:layout_below="@id/heartText"
        android:background="#64A18A"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/day"
        android:layout_toRightOf="@id/left_arrow"
        android:background="@color/blue_green"
        >
    </RelativeLayout>


    <ListView android:id="@+id/list_scheme"
        android:layout_below="@id/day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="true"


         />

</RelativeLayout>
